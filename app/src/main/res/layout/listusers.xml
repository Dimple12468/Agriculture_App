<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ddo_profile_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="15dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/ado_ddo_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageuser"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user" />

            <ImageView
                android:layout_alignBottom="@id/imageuser"
                android:id="@+id/edit_id"
                android:src="@drawable/edit_ic"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground" />
            <ImageView
                android:layout_alignBottom="@id/imageuser"
                android:layout_marginRight="16dp"
                android:id="@+id/delete_id"
                android:layout_marginTop="16dp"
                android:src="@drawable/delete_ic"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_toLeftOf="@id/edit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvuser"
                android:layout_marginTop="16dp"
                android:layout_below="@id/imageuser"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_bg" />

            <TextView
                android:id="@+id/tvinfo"
                android:layout_below="@id/tvuser"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/shimmer_bg" />
<!--            <ImageView-->
<!--                android:layout_alignBottom="@id/tvuser"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:src="@mipmap/edit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content" />-->

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>
