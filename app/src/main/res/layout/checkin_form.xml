<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:layout_marginRight="16dp"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:text="take picture"
        android:id="@+id/pick_photo"
        android:background="@drawable/shape"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp" />

    <Button
        android:layout_marginLeft="16dp"
        android:id="@+id/submit_report_ado"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape"
        android:padding="16dp"
        android:text="Submit Report"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />



    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/cardview0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/khasra_no"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:hint="Khasra Number*"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardview0"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="8dp"
            android:id="@+id/ado_report_remarks"
            android:gravity="start"
            android:hint="Remarks*"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/cardview1"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="8dp"
            android:gravity="start"
            android:id="@+id/incident_reason"
            android:hint="Incident Reason*"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pics_recyclerview"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_below="@id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

</RelativeLayout>