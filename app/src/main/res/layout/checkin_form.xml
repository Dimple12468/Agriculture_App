    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/pick_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pics_recyclerview"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape"
            android:padding="16dp"
            android:text="TAKE PICTURE"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/submit_report_ado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pics_recyclerview"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape"
            android:padding="16dp"
            android:text="Submit Report"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/chalaan_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape"
            android:paddingHorizontal="16dp"
            android:text="ADD CHALLAN PHOTO"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chalaan_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/chalaan_photo_button"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />


