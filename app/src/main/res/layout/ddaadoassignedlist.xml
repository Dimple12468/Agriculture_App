<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_assigned"
    app:cardCornerRadius="15dp"
    android:elevation="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_assigned"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="8dp"
                android:id="@+id/adoassignedid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/shimmer_bg" />


            <TextView
                android:padding="8dp"
                android:id="@+id/adoassignedname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adoassignedid"
                android:layout_marginTop="8dp"
                android:textSize="24dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/shimmer_bg" />


            <TextView
                android:padding="8dp"
                android:id="@+id/adoassignedaddress"
                android:layout_below="@+id/adoassignedname"
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_bg"
                />

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.cardview.widget.CardView>