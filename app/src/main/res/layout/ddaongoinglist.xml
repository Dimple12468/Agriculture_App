<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentongoing">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Onlocationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Id:"/>
            <TextView
                android:id="@+id/Onlid"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/shimmer_bg"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/Ondatetext"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Ondatetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Onlocationtext"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Date:"/>

            <TextView
                android:background="@color/shimmer_bg"
                android:id="@+id/Ondate"
                android:layout_below="@+id/Onlocationtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/Ondatetext"
                android:layout_marginBottom="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Ontimetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ondatetext"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Time:"/>

            <TextView
                android:background="@color/shimmer_bg"
                android:id="@+id/OnTime"
                android:layout_width="match_parent"
                android:layout_below="@+id/Ondate"
                android:layout_toRightOf="@+id/Ontimetext"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/Onaddresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ontimetext"
                android:paddingBottom="16dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Address:"/>

            <TextView
                android:background="@color/shimmer_bg"
                android:id="@+id/Onaddress"
                android:layout_width="match_parent"
                android:layout_below="@+id/OnTime"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/Onaddresstext"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
