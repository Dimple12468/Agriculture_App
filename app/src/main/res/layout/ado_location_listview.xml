<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ado_loaction_parent">

    <TextView
        android:layout_marginBottom="2dp"
        android:layout_above="@id/laddress"
        android:id="@+id/lname"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="location name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/laddress"
        android:textSize="18sp"
        android:text="location address,location address"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/loaction"
        android:layout_alignBottom="@id/laddress"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>



</RelativeLayout>